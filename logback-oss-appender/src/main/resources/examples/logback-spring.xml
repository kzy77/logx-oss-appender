<?xml version="1.0" encoding="UTF-8"?>
<!-- Logback Spring Boot 配置示例：OSS日志上传 -->
<configuration>
    
    <!-- 引入Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 定义属性 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="application"/>
    <springProperty scope="context" name="APP_ENV" source="spring.profiles.active" defaultValue="dev"/>
    
    <!-- 控制台Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} [%t] %highlight(%-5level) %cyan(%logger{36}) [%X{traceId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件Appender（本地备份） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${APP_NAME}.log</file>
        <encoder>
            <pattern>%d{ISO8601} [%t] %-5level %logger{36} [%X{traceId}] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/${APP_NAME}-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 系统日志：上传到OSS -->
    <appender name="OSS" class="org.logx.logback.LogbackOSSAppender">
        <endpoint>https://oss-cn-hangzhou.aliyuncs.com</endpoint>
        <region>cn-hangzhou</region>
        <accessKeyId>${OSS_ACCESS_KEY_ID}</accessKeyId>
        <accessKeySecret>${OSS_ACCESS_KEY_SECRET}</accessKeySecret>
        <bucket>my-app-system-logs</bucket>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 异步Appender（进一步提升性能） -->
    <appender name="ASYNC_OSS" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>2048</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="OSS"/>
    </appender>

    <!-- 业务日志专用Appender -->
    <!-- 业务日志：上传到OSS -->
    <appender name="BUSINESS" class="org.logx.logback.LogbackOSSAppender">
        <endpoint>https://oss-cn-hangzhou.aliyuncs.com</endpoint>
        <region>cn-hangzhou</region>
        <accessKeyId>${OSS_ACCESS_KEY_ID}</accessKeyId>
        <accessKeySecret>${OSS_ACCESS_KEY_SECRET}</accessKeySecret>
        <bucket>my-app-business-logs</bucket>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger配置 -->
    
    <!-- 业务日志：单独记录到业务存储 -->
    <logger name="com.mycompany.business" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS"/>
    </logger>
    
    <!-- 审计日志：高优先级上传 -->
    <logger name="audit" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="OSS"/>
    </logger>
    
    <!-- 性能日志：仅在开发环境记录 -->
    <springProfile name="dev,test">
        <logger name="performance" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
    </springProfile>
    
    <!-- 第三方库日志：仅控制台和本地文件 -->
    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <logger name="com.alibaba" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- 根Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        
        <!-- 生产环境启用OSS上传 -->
        <springProfile name="prod">
            <appender-ref ref="ASYNC_OSS"/>
        </springProfile>
        
        <!-- 测试环境启用OSS上传但降低频率 -->
        <springProfile name="test">
            <appender-ref ref="OSS"/>
        </springProfile>
    </root>

</configuration>
