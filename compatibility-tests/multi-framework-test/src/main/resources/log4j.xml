<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- 控制台输出 -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- 文件输出 -->
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/application.log"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="30"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- OSS Appender配置（使用环境变量，支持MinIO/S3/OSS） -->
    <appender name="oss" class="org.logx.log4j.Log4jOSSAppender">
        <!-- 存储配置（使用环境变量，支持MinIO/S3/OSS） -->
        <param name="endpoint" value="${LOGX_OSS_ENDPOINT:-http://localhost:9000}"/>
        <param name="region" value="${LOGX_OSS_REGION:-ap-guangzhou}"/>
        <param name="accessKeyId" value="${LOGX_OSS_ACCESS_KEY_ID:-minioadmin}"/>
        <param name="accessKeySecret" value="${LOGX_OSS_ACCESS_KEY_SECRET:-minioadmin}"/>
        <param name="bucket" value="${LOGX_OSS_BUCKET:-logx-test-bucket}"/>
        <param name="keyPrefix" value="${LOGX_OSS_KEY_PREFIX:-logs/log4j1/}"/>
        <param name="ossType" value="${LOGX_OSS_OSS_TYPE:-S3}"/>

        <!-- pathStyleAccess和enableSsl根据endpoint自动识别 -->
    </appender>

    <!-- 根日志配置 -->
    <root>
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
        <appender-ref ref="oss"/>
    </root>

</log4j:configuration>