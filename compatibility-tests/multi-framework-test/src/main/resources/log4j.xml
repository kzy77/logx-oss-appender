<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- 控制台输出 -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- OSS Appender配置 -->
    <appender name="oss" class="org.logx.log4j.Log4jOSSAppender">
        <!-- 存储配置 -->
        <param name="endpoint" value="https://s3.amazonaws.com"/>
        <param name="region" value="us-east-1"/>
        <param name="accessKeyId" value="test-access-key"/>
        <param name="accessKeySecret" value="test-secret-key"/>
        <param name="bucket" value="test-bucket"/>
        <param name="keyPrefix" value="logs/log4j1/"/>
        <param name="ossType" value="SF_OSS"/>

        <!-- 其他参数使用代码默认值 -->
    </appender>

    <!-- 根日志配置 -->
    <root>
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="oss"/>
    </root>

</log4j:configuration>