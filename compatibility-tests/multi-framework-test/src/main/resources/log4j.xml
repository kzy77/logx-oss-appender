<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- 控制台输出 -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- OSS Appender配置 -->
    <appender name="oss" class="org.logx.log4j.Log4jOSSAppender">
        <!-- S3配置 -->
        <param name="s3Bucket" value="test-bucket"/>
        <param name="s3KeyPrefix" value="logs/log4j1/"/>
        <param name="s3Region" value="us-east-1"/>
        
        <!-- 批处理配置 -->
        <param name="batchSize" value="100"/>
        <param name="flushInterval" value="5000"/>
        
        <!-- 队列配置 -->
        <param name="queueCapacity" value="10000"/>
    </appender>

    <!-- 根日志配置 -->
    <root>
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="oss"/>
    </root>

</log4j:configuration>