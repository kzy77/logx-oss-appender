<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- 控制台输出 -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- OSS Appender配置（使用MinIO测试配置） -->
    <appender name="oss" class="org.logx.log4j.Log4jOSSAppender">
        <!-- 存储配置（默认MinIO） -->
        <param name="endpoint" value="http://localhost:9000"/>
        <param name="region" value="ap-guangzhou"/>
        <param name="accessKeyId" value="minioadmin"/>
        <param name="accessKeySecret" value="minioadmin"/>
        <param name="bucket" value="logx-test-bucket"/>
        <param name="keyPrefix" value="logs/log4j1/"/>
        <param name="ossType" value="S3"/>
        <param name="pathStyleAccess" value="true"/>
        <param name="enableSsl" value="false"/>

        <!-- 其他参数使用代码默认值 -->
    </appender>

    <!-- 根日志配置 -->
    <root>
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="oss"/>
    </root>

</log4j:configuration>