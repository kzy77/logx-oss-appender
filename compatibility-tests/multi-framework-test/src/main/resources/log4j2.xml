<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- OSS Appender配置（使用环境变量，默认MinIO） -->
        <OSS name="OSS"
             endpoint="${env:LOGX_OSS_ENDPOINT:-http://localhost:9000}"
             region="${env:LOGX_OSS_REGION:-ap-guangzhou}"
             accessKeyId="${env:LOGX_OSS_ACCESS_KEY_ID:-minioadmin}"
             accessKeySecret="${env:LOGX_OSS_ACCESS_KEY_SECRET:-minioadmin}"
             bucket="${env:LOGX_OSS_BUCKET:-logx-test-bucket}"
             ossType="${env:LOGX_OSS_OSS_TYPE:-S3}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </OSS>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="OSS"/>
        </Root>
    </Loggers>
</Configuration>