<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- 文件输出 -->
        <RollingFile name="File" fileName="logs/application.log" filePattern="logs/application-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- OSS Appender配置（使用环境变量，默认MinIO） -->
        <!-- pathStyleAccess和enableSsl根据endpoint自动识别 -->
        <OSS name="OSS"
             endpoint="${env:LOGX_OSS_ENDPOINT:-http://localhost:9000}"
             region="${env:LOGX_OSS_REGION:-us}"
             accessKeyId="${env:LOGX_OSS_ACCESS_KEY_ID:-minioadmin}"
             accessKeySecret="${env:LOGX_OSS_ACCESS_KEY_SECRET:-minioadmin}"
             bucket="${env:LOGX_OSS_BUCKET:-logx-test-bucket}"
             ossType="${env:LOGX_OSS_OSS_TYPE:-S3}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </OSS>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="OSS"/>
        </Root>
    </Loggers>
</Configuration>