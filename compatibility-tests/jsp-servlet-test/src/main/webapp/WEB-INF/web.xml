<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>JSP/Servlet Compatibility Test</display-name>

    <!-- Context Parameters -->
    <context-param>
        <param-name>logbackConfigLocation</param-name>
        <param-value>classpath:logback.xml</param-value>
    </context-param>

    <!-- Logback Configuration Listener -->
    <listener>
        <listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
    </listener>

    <!-- Servlets -->
    <servlet>
        <servlet-name>TestLogServlet</servlet-name>
        <servlet-class>org.logx.compatibility.jsp.servlet.TestLogServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TestLogServlet</servlet-name>
        <url-pattern>/test-log</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TestExceptionServlet</servlet-name>
        <servlet-class>org.logx.compatibility.jsp.servlet.TestExceptionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TestExceptionServlet</servlet-name>
        <url-pattern>/test-exception</url-pattern>
    </servlet-mapping>

</web-app>